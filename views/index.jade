doctype 5
html(lang="en")
    head
        title=title
        link(rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.css")
        link(rel="stylesheet" href="stylesheets/map.css")
    body
        div(id="container")
            div(id="info-column")
                div(class="info-column-content")
                    h3 Bacchos Wine
                    h4 Search for wine stores by country and zipcode
                div(id="form-wrapper" class="info-column-content")
                    form(id="zipcode-form", action="/ajax/zipcode", method="GET")
                        select(name="country")
                            option US
                            option CA
                            option ES
                        input(type="text", name="zipcode", placeholder="zipcode")
                        input(type="submit", value="search")
            div(id="map-wrapper")
                div(id="map")

        script(type="text/javascript", src="http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.js").
        script(type="text/javascript", src="http://code.jquery.com/jquery-1.10.0.min.js").
        script(type="text/javascript", src="/js/map.js").
        script(type="text/javascript" src="/socket.io/socket.io.js").
        script(type="text/javascript").
            $(function(){
                $(document).ready(function() {
                    mapInit(wineMap);
                });
            });

